---
import fs from "node:fs";
import { minify } from "terser";
import buildScript from "./script.js";

export interface props {
  beautify: boolean;
  limit: number;
  external: boolean;
  ignores: string[];
  highPriorityPrefetch: boolean;
  prefetch: boolean;
  prefetchUpgradation: boolean;
  cache: boolean;
  root: string;
  rootMargin: string;
  threshold: number;
  timeout: number;
  delay: number;
}

const {
  beautify = false,
  limit,
  external = false,
  ignores,
  highPriorityPrefetch = false,
  prefetch = true,
  prefetchUpgradation = true,
  cache = true,
  root,
  rootMargin,
  threshold = 0.25,
  timeout = 2000,
  delay = 500,
} = Astro.props as props;

const scriptContent = buildScript(
  limit,
  ignores,
  highPriorityPrefetch,
  prefetch,
  prefetchUpgradation,
  cache,
  root,
  rootMargin,
  threshold,
  timeout,
  delay
);

script = await minify(scriptContent, { format : { beautify } });

fs.writeFileSync("node_modules/astro-spa/spa.js", scriptContent);

const scriptTag = `<script${
  external ? ` src="node_modules/astro-spa/spa.js"` : ""
}>${external ? "" : scriptContent}</script>`;
---

{scriptTag}